{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["chrome", "vite/client", "node"],
    "skipLibCheck": true,
    "noEmit": true,
    "useDefineForClassFields": true
  },
  "include": ["src", "vite.config.ts"]
}
